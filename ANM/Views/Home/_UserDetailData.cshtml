@using System.Data
@{
    ViewBag.Title = "Downloaded Certificates List";
    DataTable dt = new DataTable();
    if (Model != null)
    {
        dt = Model;
    }
}

<div class="row row-deck">
    <div class="col-lg-12 col-md-12">

        <div class="table-responsive">
            @*table card-table table-vcenter text-nowrap*@
            <table class="table card-table table-vcenter text-nowrap" id="DataList">
                <thead>
                    <tr>
                        <th>SrNo.</th>
                        <th>Name</th>
                        <th>Mobile No</th>
                        @*<th>Role</th>*@
                        <th>District</th>
                        <th>Block</th>
                        <th>Downloaded Certificates</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int sno = 1;
                        if (Model != null)
                        {
                            foreach (DataRow dr in dt.Rows)
                            {
                                <tr>
                                    <td class="text-center">@(sno++)</td>
                                    <td class="text-left">@dr["Name"]</td>
                                    <td class="text-left">@dr["MobileNo"]</td>
                                    @*<td class="text-left">@dr["Role"]</td>*@
                                    <td class="text-left">@dr["DistName"]</td>
                                    <td class="text-left">@dr["BlockName"]</td>
                                    <td class="text-left">@dr["RegisterDt"]</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="7" class="text-danger"><strong> Record Not Found !!</strong></td></tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>